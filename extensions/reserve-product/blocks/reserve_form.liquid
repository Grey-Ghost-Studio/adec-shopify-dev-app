    "name": "Reserve Product Form",
    "target": "section",
    "stylesheet": "reserve-product.css",
    "settings": [
      {
        "type": "header",
        "content": "Modal Settings"
      },
      {
        "type": "text",
        "id": "close_button_label",
        "label": "Close Button Label (accessibility)",
        "default": "Close"
      },
      {
        "type": "header",
        "content": "Header Content"
      },
      {
        "type": "text",
        "id": "form_title",
