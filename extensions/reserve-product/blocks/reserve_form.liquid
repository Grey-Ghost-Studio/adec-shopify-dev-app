        "default": "Canada"
      },
      {
        "type": "text",
        "id": "email_label",
        "label": "Email Label",
        "default": "Contact email"
      },
      {
        "type": "text",
        "id": "role_label",
        "label": "Role Label",
        "default": "Your role?"
      },
      {
        "type": "text",
        "id": "role_placeholder",
        "label": "Role Placeholder",
        "default": "– Select your role –"
      },
      {
        "type": "text",
        "id": "role_doctor",
        "label": "Role Option: Doctor",
        "default": "Doctor or practice staff"
      },
      {
        "type": "text",
        "id": "role_dealer",
        "label": "Role Option: Dealer",
        "default": "A-dec dealer"
      },
      {
        "type": "text",
        "id": "role_sales",
        "label": "Role Option: Sales",
        "default": "A-dec sales team"
      },
      {
        "type": "text",
        "id": "submit_button_text",
        "label": "Submit Button Text",
        "default": "Reserve package"
      }
    ]
  }
{% endschema %}